---
interface Props {
	title: string;
}

const { title } = Astro.props;

function assignIdToTitle (title: string) : string {
    return title.toLowerCase().replace('#', '').replace(' ', '-');
}

const id = assignIdToTitle(title);
---

<li class="ms-4">
    <div class="flex items-center me-4 gap-2 transition-all">
        <label for={id} class="select-none ms-2 rounded-lg hover:bg-red-950 text-sm pb-2 pt-2 pl-2 font-medium text-gray-300 w-2/5 cursor-pointer">{title}</label>
        <input id={id} type="checkbox" value="" class="cursor-pointer w-4 h-4 ml-0 pl-0 accent-red-600 text-red-600 rounded focus:ring-red-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
    </div>
</li>